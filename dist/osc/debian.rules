#!/usr/bin/make -f

PACKAGE := curves-mouse-acceleration
VERSION := $(shell dpkg-parsechangelog -S Version)

%:
	dh $@ --with dkms

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_BUILD_TYPE=Release

override_dh_installsystemd:
	dh_installsystemd --name=curves-mouse-acceleration-restore

override_dh_install:
	dh_install
	mkdir -p debian/$(PACKAGE)/usr/src/$(PACKAGE)-$(VERSION)
	rsync -a . debian/$(PACKAGE)/usr/src/$(PACKAGE)-$(VERSION) \
		--exclude debian \
		--exclude .git \
		--exclude build \
		--exclude .gitignore

override_dh_auto_test:
